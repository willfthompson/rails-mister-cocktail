
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="col-12 col-md-6 col-lg-4">
      <%= link_to(cocktail_path(cocktail.id)) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url(<%= cl_image_path cocktail.photo.key %>)">
      <%= cocktail.name %>
    <% end %>
    </div>
    </div>

    <% else %>
    <div class="col-12 col-md-6 col-lg-4">
      <%= link_to(cocktail_path(cocktail.id)) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('https://res.cloudinary.com/dx9ybadbm/image/upload/v1598023774/Cocktails_b7lcs5.jpg')">
      <%= cocktail.name %>
    <% end %>
    </div>
      </div>
    <% end %>
    <% end %>
</div>
